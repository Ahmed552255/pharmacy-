<body>

    <div class="header">
        <h2 style="margin:0; color: var(--dark-teal);"> <i class="fas fa-file-medical"></i> السجل الطبي التاريخي</h2>
        <button class="back-btn" onclick="history.back()">عودة للكشف</button>
    </div>

    <div class="patient-info-bar" id="patient-meta">
        <div><i class="fas fa-user"></i> <b id="meta-name">جاري التحميل...</b></div>
        <div><i class="fas fa-phone"></i> <span id="meta-phone">-</span></div>
    </div>

    <div id="loading"> <i class="fas fa-spinner fa-spin fa-3x"></i> <p>جاري سحب الملفات...</p> </div>
    
    <div id="history-list"></div>

    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.0.2/firebase-app.js";
        import { getFirestore, collection, query, where, getDocs, orderBy } from "https://www.gstatic.com/firebasejs/11.0.2/firebase-firestore.js";

        const firebaseConfig = {
            apiKey: "AIzaSyBy8xPvxQuC6bVLerLpSjzPmvBWyAhuYKo",
            authDomain: "mogama-49e7f.firebaseapp.com",
            projectId: "mogama-49e7f",
            storageBucket: "mogama-49e7f.firebasestorage.app",
            messagingSenderId: "575066177594",
            appId: "1:575066177594:web:82137834158b4c353db503"
        };

        const app = initializeApp(firebaseConfig);
        const db = getFirestore(app);

        // الحصول على رقم التليفون من الرابط
        const urlParams = new URLSearchParams(window.location.search);
        const phone = urlParams.get('phone');

        if (phone) {
            loadPatientHistory(phone);
        } else {
            document.body.innerHTML = "<h1>خطأ: لم يتم تحديد مريض</h1>";
        }

        async function loadPatientHistory(phoneNum) {
            const container = document.getElementById('history-list');
            const loading = document.getElementById('loading');
            
            try {
                const q = query(
                    collection(db, "patient_history"), 
                    where("phone", "==", phoneNum),
                    orderBy("timestamp", "desc")
                );

                const querySnapshot = await getDocs(q);
                loading.style.display = 'none';

                if (querySnapshot.empty) {
                    container.innerHTML = "<p style='text-align:center'>لا يوجد سجلات سابقة لهذا المريض</p>";
                    return;
                }

                // تحديث بيانات المريض في البار العلوي
                const firstDoc = querySnapshot.docs[0].data();
                document.getElementById('meta-name').innerText = firstDoc.name;
                document.getElementById('meta-phone').innerText = firstDoc.phone;

                querySnapshot.forEach((doc) => {
                    const visit = doc.data();
                    const dateStr = visit.timestamp ? new Date(visit.timestamp.seconds * 1000).toLocaleDateString('ar-EG') : visit.date;

                    const card = document.createElement('div');
                    card.className = 'visit-card';
                    card.innerHTML = `
                        <div class="visit-date">${dateStr}</div>
                        <div style="margin-top:20px">
                            <div class="section-title"><i class="fas fa-stethoscope"></i> الشكوى والأعراض:</div>
                            <div class="data-text">${visit.symptoms || 'لا يوجد'}</div>

                            <div class="section-title"><i class="fas fa-notes-medical"></i> التشخيص:</div>
                            <div class="data-text"><b>${visit.diagnosis || 'لم يحدد'}</b></div>

                            <div class="section-title"><i class="fas fa-pills"></i> الروشتة المصروفة:</div>
                            <div class="data-text">
                                ${visit.prescription && visit.prescription.length > 0 
                                    ? visit.prescription.map(m => `<span class="med-item">${m.name} (${m.dose})</span>`).join('')
                                    : 'لم يتم وصف أدوية'}
                            </div>

                            ${visit.futureNote ? `
                                <div class="section-title" style="color:var(--warning-orange)"><i class="fas fa-exclamation-circle"></i> ملحوظة للمتابعة:</div>
                                <div class="data-text" style="background:#fff9e6">${visit.futureNote}</div>
                            ` : ''}
                        </div>
                    `;
                    container.appendChild(card);
                });

            } catch (error) {
                console.error(error);
                container.innerHTML = "<p>حدث خطأ أثناء تحميل البيانات</p>";
            }
        }
    </script>
</body>
