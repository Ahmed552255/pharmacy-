    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        :root {
            --primary-green: #45b39d;
            --dark-teal: #16a085;
            --light-bg: #f4fbf9;
        }

        body {
            font-family: 'Segoe UI', Tahoma, sans-serif;
            background-color: var(--light-bg);
            margin: 0; padding: 20px;
        }

        .header {
            display: flex; align-items: center; justify-content: space-between;
            margin-bottom: 25px; border-bottom: 2px solid var(--primary-green);
            padding-bottom: 10px;
        }

        .patient-info-bar {
            background: white; padding: 15px; border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.05); margin-bottom: 20px;
            display: flex; gap: 20px; color: var(--dark-teal);
        }

        .visit-card {
            background: white; border-radius: 15px; padding: 20px;
            margin-bottom: 15px; box-shadow: 0 4px 6px rgba(0,0,0,0.02);
            border-right: 8px solid var(--primary-green);
            position: relative;
        }

        .visit-date {
            position: absolute; left: 20px; top: 20px;
            background: var(--light-bg); padding: 5px 10px;
            border-radius: 8px; font-size: 13px; font-weight: bold;
        }

        .section-title {
            color: var(--primary-green); font-weight: bold;
            margin-top: 10px; display: flex; align-items: center; gap: 8px;
        }

        .data-text { background: #fdfdfd; padding: 10px; border-radius: 8px; margin: 5px 0; border: 1px solid #eee; }

        .med-item {
            display: inline-block; background: #e8f4fd; color: #2980b9;
            padding: 5px 12px; border-radius: 20px; margin: 3px; font-size: 14px;
        }

        #loading { text-align: center; padding: 50px; color: #999; }
        .back-btn { background: var(--dark-teal); color: white; border: none; padding: 10px 20px; border-radius: 8px; cursor: pointer; }
