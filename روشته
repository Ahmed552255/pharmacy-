    <script>
        function toggleSmartActions(id) {
            const el = document.getElementById(id);
            const isOpen = el.style.display === 'flex';
            document.querySelectorAll('.smart-actions').forEach(a => a.style.display = 'none');
            el.style.display = isOpen ? 'none' : 'flex';
            event.stopPropagation();
        }

        function search(type, med) {
            if(type === 'img') {
                window.open(`https://www.google.com/search?tbm=isch&q=${med}+pharmacy+pack`, '_blank');
            } else {
                window.open(`https://www.google.com/search?q=best+safe+alternative+for+${med}+interaction+check`, '_blank');
            }
        }

        // Ù…Ø­Ø§ÙƒØ§Ø© ØªØºÙŠÙŠØ± Ø¹Ø¯Ø§Ø¯ Ø§Ù„Ù…Ø´Ø§Ù‡Ø¯ÙŠÙ† Ø¨Ø´ÙƒÙ„ Ø¹Ø´ÙˆØ§Ø¦ÙŠ Ù„Ù„Ø¬Ù…Ø§Ù„
        setInterval(() => {
            const count = document.getElementById('viewerCount');
            let current = parseInt(count.innerText);
            if(Math.random() > 0.5) count.innerText = Math.max(1, current + 1);
            else count.innerText = Math.max(1, current - 1);
        }, 10000);
    </script>
