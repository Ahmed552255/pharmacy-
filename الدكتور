        function toggleAcc(idx) {
            const contents = document.querySelectorAll('.acc-content');
            contents.forEach((c, i) => {
                c.classList.toggle('active', i === idx);
                c.parentElement.querySelector('i').className = i === idx ? 'fas fa-chevron-down' : 'fas fa-chevron-right';
            });
        }

